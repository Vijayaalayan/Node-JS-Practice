<%-include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/food.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%-include('../includes/navigation.ejs')%>
    <main>
            <form class="form-food"action="<%if(editing) {%>edit-food<%}else{%>add-food<%}%>" method="POST">
                <div class="form-control">
                    <label for="title">Food Name</label>
                    <input type="text" name="title" id="title" value="<%if(editing) {%><%=food.title%><%}%>">
                    <label for="title">Image</label>
                    <input type="text" name="image" id="image" value="<%if(editing) {%><%=food.data%><%}%>">
                    <label for="title">Price</label>
                    <input type="number" name="price" id="price" step="10" value="<%if(editing) {%><%=food.price%><%}%>">
                    <label for="title">Description</label>
                    <textarea type="text" name="desc" id="desc"><%if(editing) {%><%=food.desc%><%}%></textarea>
                </div>
                <button class="btn" type="submit"><%if(editing) {%> Update Product <%}else{%> Add Product <%}%></button>
            </form>
    </main>
<%-include('../includes/end.ejs')%>