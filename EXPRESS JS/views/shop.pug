extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/food.css")

block content
    main 
        if(food.length > 0)                    
            .grid
                each foods in food
                    article.card.product-item
                        header.card__header
                            h1.product__title #{foods.title}
                        .card__image
                            //- - var imag = ${foods.data};
                            img(src=foods.data,alt="A Book")
                        .card__content
                            h2.product__price #{foods.price}
                            p.product__description #{foods.desc}
                        .card__actions
                            button.btn Add to Cart  
        else 
            h1 No food in shop                           


        